{% section 'hero-banner' %}

{% section 'featured-products' %}

<section class="categories">
  <div class="container">
    <h2 class="section-title">Shop by Category</h2>
    
    <div class="category-grid">
      <div class="category-card">
        <img src="{{ 'pool-cues-category.jpg' | asset_url }}" alt="Pool Cues" class="category-image">
        <div class="category-overlay">
          <h3 class="category-title">Pool Cues</h3>
        </div>
      </div>
      
      <div class="category-card">
        <img src="{{ 'snooker-cues-category.jpg' | asset_url }}" alt="Snooker Cues" class="category-image">
        <div class="category-overlay">
          <h3 class="category-title">Snooker Cues</h3>
        </div>
      </div>
      
      <div class="category-card">
        <img src="{{ 'accessories-category.jpg' | asset_url }}" alt="Accessories" class="category-image">
        <div class="category-overlay">
          <h3 class="category-title">Accessories</h3>
        </div>
      </div>
      
      <div class="category-card">
        <img src="{{ 'tables-category.jpg' | asset_url }}" alt="Tables" class="category-image">
        <div class="category-overlay">
          <h3 class="category-title">Tables</h3>
        </div>
      </div>
    </div>
  </div>
</section>

<section style="background: var(--color-background-secondary); padding: 4rem 0;">
  <div class="container">
    <h2 class="section-title">Why Choose Pool Club Pro?</h2>
    
    <div class="features-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-top: 2rem;">
      <div class="feature-item" style="text-align: center; padding: 2rem;">
        <div style="font-size: 3rem; margin-bottom: 1rem;">🏆</div>
        <h3 style="color: var(--color-primary); margin-bottom: 1rem;">Premium Quality</h3>
        <p>Professional-grade equipment used by champions worldwide</p>
      </div>
      
      <div class="feature-item" style="text-align: center; padding: 2rem;">
        <div style="font-size: 3rem; margin-bottom: 1rem;">🚚</div>
        <h3 style="color: var(--color-primary); margin-bottom: 1rem;">Fast Shipping</h3>
        <p>Quick and secure delivery to get you playing sooner</p>
      </div>
      
      <div class="feature-item" style="text-align: center; padding: 2rem;">
        <div style="font-size: 3rem; margin-bottom: 1rem;">💯</div>
        <h3 style="color: var(--color-primary); margin-bottom: 1rem;">Expert Support</h3>
        <p>Get advice from experienced players and professionals</p>
      </div>
    </div>
  </div>
</section>

